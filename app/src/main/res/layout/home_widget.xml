<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/black"
              android:baselineAligned="false"
              android:orientation="horizontal"
              android:padding="@dimen/widget_margin"
              android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/currentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todayTempMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3ยบ"
                android:textAlignment="center"
                android:textColor="@color/tempMinClear"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/todayTempMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="22ยบ"
                android:textAlignment="center"
                android:textColor="@color/tempMaxClear"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/todayTemp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="14ยบ"
                android:textAlignment="center"
                android:textColor="@color/Blanco"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/todayStatusIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:contentDescription="5656"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_chanceflurries_w"
                app:srcCompat="@drawable/ic_chanceflurries_w"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/todayRainSnowContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/todayRainSnowIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_drop"
                    app:srcCompat="@drawable/ic_drop"/>

                <TextView
                    android:id="@+id/todayRainSnow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="47%"
                    android:textAlignment="textStart"
                    android:textColor="@color/Blanco"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/todayWindIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_clear"
                    app:srcCompat="@drawable/ic_clear"/>

                <TextView
                    android:id="@+id/todayWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="22"
                    android:textAlignment="textStart"
                    android:textColor="@color/Blanco"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/verticalDivision">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hourlyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:orientation="vertical"
        android:padding="1dp">

        <ListView
            android:id="@+id/listViewHourly"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/verticalDivision"/>

    <LinearLayout
        android:id="@+id/dailyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:orientation="vertical"
        android:padding="6dp">

        <ListView
            android:id="@+id/listViewDaily"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

        </ListView>
    </LinearLayout>


</LinearLayout>