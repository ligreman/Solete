<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.33"
        android:orientation="vertical"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dailyDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="May. 5"
                android:textAlignment="viewStart"
                android:textColor="@color/Blanco"
                android:textSize="12sp"/>

            <LinearLayout
                android:id="@+id/dailySnowContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/dailySnowIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitEnd"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_drop"
                    app:srcCompat="@drawable/ic_drop"/>

                <TextView
                    android:id="@+id/dailySnow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200"
                    android:textAlignment="textStart"
                    android:textColor="@color/Blanco"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dailyTemperatureMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/tempMinClear"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/Blanco"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/dailyTemperatureMax"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="14"
                    android:textAlignment="center"
                    android:textColor="@color/tempMaxClear"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ยบ"
                    android:textColor="@color/Blanco"
                    android:textSize="16sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/dailyStatusIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:contentDescription="5656"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_chanceflurries_w"
                app:srcCompat="@drawable/ic_chanceflurries_w"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dailyRainContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dailyRainIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitEnd"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/ic_drop"
                    app:srcCompat="@drawable/ic_drop"/>

                <TextView
                    android:id="@+id/dailyRain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="47%"
                    android:textAlignment="textStart"
                    android:textColor="@color/Blanco"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dailyWindIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_wind_calm"
                    app:srcCompat="@drawable/ic_wind_calm"/>

                <TextView
                    android:id="@+id/dailyWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="22"
                    android:textAlignment="textStart"
                    android:textColor="@color/Blanco"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>